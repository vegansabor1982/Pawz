<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_type_test_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="type"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/text_view_family_test_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="family"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view_description_test_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="description"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/image_view_upload_test_two"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/text_view_description_test"
            card_view:layout_constraintVertical_bias="0.092" />

        <TextView
            android:id="@+id/tv_latitude_return_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Lat"
            android:textAlignment="center"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_longtitude_return_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Long"
            android:textAlignment="center"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_uploader_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Uploaded by"
            android:textAlignment="center"
            android:textSize="10sp" />


    </LinearLayout>


</android.support.v7.widget.CardView>